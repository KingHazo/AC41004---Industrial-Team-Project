files:
  "/etc/nginx/conf.d/upload.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 100M;

  "/etc/php.d/99-upload.ini":
    mode: "000644"
    owner: root
    group: root
    content: |
      upload_max_filesize = 500M
      post_max_size = 100M
      max_execution_time = 300
      max_input_time = 300
      memory_limit = 512M

container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload || true"
  02_restart_php:
    command: "sudo service php-fpm restart || true"
